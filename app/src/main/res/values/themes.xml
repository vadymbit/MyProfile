<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyProfile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/background</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/ActionModeToolbar</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
        <item name="colorError">@color/red_100</item>
    </style>

    <style name="Theme.MyProfile" parent="Base.Theme.MyProfile">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_700</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="background">@color/blue_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_700</item>
    </style>

    <style name="DialogTheme" parent="Theme.MyProfile">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>