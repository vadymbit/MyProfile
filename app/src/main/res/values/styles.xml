<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="White">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/border_margin</item>
    </style>

    <style name="Gray">
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_margin">@dimen/border_margin</item>
    </style>

    <style name="Blue">
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_margin">@dimen/border_margin</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapContent.fontSansGray">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="WrapContent.Bordered">
        <item name="android:layout_margin">@dimen/border_margin</item>
    </style>

    <style name="WrapContent.Bordered.fontSansGray">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="WrapContent.Bordered.fontSansWhite">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ProfileImage">
        <item name="android:layout_width">@dimen/profile_image_size</item>
        <item name="android:layout_height">@dimen/profile_image_size</item>
        <item name="android:layout_margin">@dimen/border_margin</item>
    </style>
    
    <style name="outlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/blue</item>
        <item name="strokeColor">@color/blue</item>
        <item name="android:layout_margin">@dimen/border_margin</item>
    </style>

    <style name="BigButton">
        <item name="android:paddingTop">@dimen/vertical_padding</item>
        <item name="android:paddingBottom">@dimen/vertical_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:layout_margin">@dimen/border_margin</item>
    </style>

    <style name="outlineBigButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/orange</item>
        <item name="android:layout_margin">@dimen/border_margin</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="TextInput">
        <item name="android:layout_margin">@dimen/border_margin</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="InputTheme" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorPrimary">@color/gray</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="fontFamily">@font/open_sans</item>
    </style>
</resources>