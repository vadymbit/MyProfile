<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Bordered">
        <item name="android:layout_margin">@dimen/border_margin</item>
    </style>

    <style name="Bordered.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Bordered.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Bordered.Blue">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Bordered.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapContent.fontSansGray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="WrapContent.Bordered">
        <item name="android:layout_margin">@dimen/border_margin</item>
    </style>

    <style name="WrapContent.Bordered.fontSansGray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="WrapContent.Bordered.fontSansWhite">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ProfileImage">
        <item name="android:layout_width">@dimen/profile_image_size</item>
        <item name="android:layout_height">@dimen/profile_image_size</item>
        <item name="android:layout_margin">@dimen/border_margin</item>
    </style>
    
    <style name="outlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="strokeColor">?attr/colorOnPrimary</item>
        <item name="android:layout_margin">@dimen/border_margin</item>
    </style>

    <style name="outlineBigButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="android:layout_margin">@dimen/border_margin</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="BigButton">
        <item name="android:paddingTop">@dimen/vertical_padding</item>
        <item name="android:paddingBottom">@dimen/vertical_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/border_margin</item>
    </style>

    <style name="TextInput">
        <item name="android:layout_margin">@dimen/border_margin</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="errorEnabled">true</item>
        <item name="expandedHintEnabled">false</item>
    </style>

    <style name="TextInputAddContacts">
        <item name="expandedHintEnabled">false</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="InputTheme" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorPrimary">@color/gray</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="ToolBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">?attr/background</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="titleCentered">true</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>
</resources>